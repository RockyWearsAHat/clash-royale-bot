# Discord
DISCORD_TOKEN=
DISCORD_APP_ID=
# For quick slash-command registration during testing
DISCORD_GUILD_ID=

# Optional: enables applying per-channel slash command permissions so Discord's
# command picker only shows commands where they're allowed.
# Must be an OAuth2 Bearer token from a user with Manage Guild + Manage Roles,
# authorized with the `applications.commands.permissions.update` scope.
DISCORD_COMMAND_PERMISSIONS_BEARER_TOKEN=

# Optional: enable interactive OAuth2 flow during `npm run register:commands`.
# If DISCORD_COMMAND_PERMISSIONS_BEARER_TOKEN is not set, the script will print an
# authorize URL, wait for the callback on the redirect URI, exchange the code, and
# apply command permissions.
#
# IMPORTANT:
# - Put this redirect URI into your Discord Developer Portal app -> OAuth2 -> Redirects.
# - The authenticating user must have Manage Guild + Manage Roles in the server.
DISCORD_OAUTH_CLIENT_SECRET=
DISCORD_OAUTH_REDIRECT_URI=http://127.0.0.1:53134/oauth2/callback

# Clash Royale Official API
# Create at https://developer.clashroyale.com/ and whitelist your public IP
CLASH_API_TOKEN=
CLASH_CLAN_TAG=

# Discord server config
GUILD_ID=
CHANNEL_GENERAL_ID=
CHANNEL_VERIFICATION_ID=
CHANNEL_WAR_LOGS_ID=
CHANNEL_ANNOUNCEMENTS_ID=
ROLE_VANQUISHED_ID=
ROLE_MEMBER_ID=
ROLE_ELDER_ID=
ROLE_COLEADER_ID=
ROLE_LEADER_ID=

# Storage
SQLITE_PATH=bot.sqlite

# Scheduler
ROLE_SYNC_CRON=*/1 * * * *
WAR_POLL_CRON=*/1 * * * *

# If true, bot will try to apply channel permission overwrites at startup.
PERMISSIONS_ENFORCE_ON_STARTUP=

WARLOGS_DEBUG=
WARLOGS_DEBUG_PLAYERS=

DEV_RECREATE_PROFILE_THREADS=
