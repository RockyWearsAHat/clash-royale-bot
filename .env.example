#############################################
# Copy this file to .env and fill in values.
#
# Notes:
# - Most Discord IDs can be copied by enabling Developer Mode in Discord:
#   User Settings -> Advanced -> Developer Mode, then right-click the channel 
#   or role -> Copy ID.
# - Clash Royale API requires your current public IP to be whitelisted in
#   https://developer.clashroyale.com/ ("My Account" -> "API Tokens"). 
#   Look up "What is my IP" on Google to find your public IP if hosting from a
#   home connection. Otherwise, you will need to slightly tailor this to your use.
#############################################

############################
# Discord App (required)
############################

# Where to find:
# - Discord Developer Portal -> Applications -> (your app)
# - Bot tab -> "Reset Token" -> Paste revealed token to DISCORD_TOKEN
DISCORD_TOKEN=

# Where to find:
# - Discord Developer Portal -> Applications -> (your app)
# - General Information -> Application ID
DISCORD_APP_ID=

############################
# Discord OAuth (optional)
############################

# Optional: if set, `npm run register:commands` can do an interactive OAuth2 flow
# to obtain a short-lived Bearer token for applying per-channel command permissions.
#
# Where to find:
# - Discord Developer Portal -> Applications -> (your app)
# - OAuth2 -> General -> Client Secret
DISCORD_OAUTH_CLIENT_SECRET=

# Must be added to:
# - Discord Developer Portal -> OAuth2 -> Redirects
DISCORD_OAUTH_REDIRECT_URI=http://127.0.0.1:53134/oauth2/callback

# Optional alternative to OAuth flow: provide a Bearer token directly.
# This must have the `applications.commands.permissions.update` scope.
DISCORD_COMMAND_PERMISSIONS_BEARER_TOKEN=

############################
# Clash Royale API (required)
############################

# Where to find:
# - https://developer.clashroyale.com/ -> My Account -> API Tokens
# - Create token + whitelist your public IP, then copy token value.
CLASH_API_TOKEN=

# Your clan tag, like #ABC123
# Where to find:
# - In-game: Clan -> details -> clan tag
CLASH_CLAN_TAG=

############################
# Server IDs (required, to get these, turn on developer options in Discord user
# settings then right click the channel and click "Copy ID".)
############################

# Your Discord server (guild) ID.
GUILD_ID=

# Channel IDs
CHANNEL_NON_MEMBER_ID=
CHANNEL_GENERAL_ID=
CHANNEL_VERIFICATION_ID=
CHANNEL_WAR_LOGS_ID=
CHANNEL_ANNOUNCEMENTS_ID=

# Role IDs
ROLE_NON_MEMBER_ID=
ROLE_MEMBER_ID=
ROLE_ELDER_ID=
ROLE_COLEADER_ID=
ROLE_LEADER_ID=

############################
# Storage
############################

# SQLite database file path (relative to repo root is fine).
SQLITE_PATH=bot.sqlite

############################
# Jobs / Scheduling (optional)
############################

# Cron format: "* * * * *" (every minute).
ROLE_SYNC_CRON=*/1 * * * *
WAR_POLL_CRON=*/1 * * * *
EMPTY_SPOT_CRON=*/5 * * * *

# If set, bot will continuously re-apply channel permission overwrites.
PERMISSIONS_ENFORCE_CRON=*/1 * * * *

# Optional fallback river race daily reset time (UTC) used for end-of-day snapshots
# ONLY if you want to force a fixed reset when the Clash API omits period end times.
# Format: HH:MM (24h)
# WAR_DAY_RESET_UTC=10:00

############################
# Behavior toggles (optional)
############################

# Dev-only helper: recreate profile threads at startup.
DEV_RECREATE_PROFILE_THREADS=false

############################
# One-time helpers (optional)
############################

# Attempt to link users by matching their server nickname to a clan roster name.
MIGRATE_NICKNAME_TO_TAG=false

# If true, rerun migration even if it already ran.
MIGRATE_NICKNAME_TO_TAG_FORCE=false

############################
# One-click bootstrap (optional)
############################

# One-click scripts (double-click launchers) use this.
# - 1 (default, recommended setup): install deps + register commands + start bot
# - 0 (recommended default run): skip install + skip command registration + start bot
INSTALL_AND_REGISTER=1

# Advanced overrides (rare): set these ONLY if you want to override INSTALL_AND_REGISTER.
# If set, these take precedence over INSTALL_AND_REGISTER.
# SKIP_INSTALL=
# REGISTER_COMMANDS=
